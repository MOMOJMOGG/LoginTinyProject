<div class="container mt-5">
  <div class="row">
    <div class="card bg-light col-8 mt-3 mx-auto rounded">
      <div class="card-body text-center">
        <h1 class="card-title mb-5">Account Login</h1>

        <form action="/" method="POST">
          <div class="mb-2">
            <input type="email" class="form-control" id="account-email" name="userEmail" placeholder="Email" required>
          </div>
          <div class="mb-5">
            <input type="password" class="form-control" id="account-password" name="userPassword" placeholder="Password"
              required>
          </div>

          {{#if isInvalidUser}}
          <div class="alert alert-info" role="alert">
            <span class="mr-2">Unknown User</span> <code>Please Sign In Again</code>
          </div>
          {{/if}}

          <button type="submit" class="btn btn-primary">
            <h4>Sign In</h4>
          </button>
        </form>
      </div>
    </div>
